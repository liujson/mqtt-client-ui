<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.liujson.client">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.app.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Refactor">
        <activity
            android:name="cn.liujson.client.ui.ConnectionProfilesActivity"
            android:launchMode="singleTask" />
        <activity android:name="cn.liujson.client.ui.ProfileEditorActivity" />
        <activity android:name="cn.liujson.client.ui.PreviewMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".ui.service.ConnectionService" />
    </application>

</manifest>