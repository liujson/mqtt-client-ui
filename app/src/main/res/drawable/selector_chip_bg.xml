<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:color="#d6d6d6" android:width="1dp"/>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#6db2f8"
                android:centerColor="#519eec"
                android:type="linear"
                android:angle="270"
                android:endColor="#388ce1"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>