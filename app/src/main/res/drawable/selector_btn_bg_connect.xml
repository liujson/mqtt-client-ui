<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#6db2f8"
                android:centerColor="#4b97e3"
                android:angle="270"
                android:endColor="#347fcb"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#adc9e8"
                android:centerColor="#a4c1e1"
                android:type="linear"
                android:angle="270"
                android:endColor="#96b1cf"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#6db2f8"
                android:centerColor="#519eec"
                android:type="linear"
                android:angle="270"
                android:endColor="#388ce1"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

</selector>