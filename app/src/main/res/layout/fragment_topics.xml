<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:background="#ececec"
        android:padding="10dp"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragments.PublishFragment">

            <EditText
                android:id="@+id/et_topic_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="22sp"
                android:background="@drawable/selector_input_bg"
                android:gravity="top"
                android:padding="5dp" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_topic_qos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_topic_input"
                android:orientation="horizontal"
                app:checkedChip="@id/chip_qos0"
                app:chipSpacingHorizontal="10dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_qos0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:fontFamily="sans-serif-condensed"
                    android:text="QoS 0"
                    android:textAllCaps="false"
                    android:textColor="#323232"
                    android:textSize="12sp"
                    app:checkedIconTint="#2c63aa"
                    app:chipBackgroundColor="#F2F2F2"
                    app:chipStrokeColor="#2c639a"
                    app:chipStrokeWidth="0.8dp"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_qos1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:fontFamily="sans-serif-condensed"
                    android:text="QoS 1"
                    android:textAllCaps="false"
                    android:textColor="#323232"
                    android:textSize="12sp"
                    app:checkedIconTint="#2c63aa"
                    app:chipBackgroundColor="#F2F2F2"
                    app:chipStrokeColor="#2c639a"
                    app:chipStrokeWidth="0.8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_qos2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="QoS 2"
                    android:textAllCaps="false"
                    android:textColor="#323232"
                    android:textSize="12sp"
                    app:checkedIconTint="#2c63aa"
                    app:chipBackgroundColor="#F2F2F2"
                    app:chipStrokeColor="#2c639a"
                    app:chipStrokeWidth="0.8dp" />
            </com.google.android.material.chip.ChipGroup>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_topic_retained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_topic_input"
                android:layout_toEndOf="@id/chip_group_topic_qos"
                android:orientation="horizontal"
                app:checkedChip="@id/chip_qos0"
                app:chipSpacingHorizontal="10dp"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/cb_retained"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Retained"
                    android:textAllCaps="false"
                    android:checkable="true"
                    app:checkedIconTint="#2c63aa"
                    android:textColor="#323232"
                    android:textSize="12sp"
                    app:chipBackgroundColor="#F2F2F2"
                    app:chipStrokeColor="#2c639a"
                    app:chipStrokeWidth="0.8dp" />
            </com.google.android.material.chip.ChipGroup>

            <Button
                android:id="@+id/btn_submit"
                android:layout_below="@id/chip_group_topic_retained"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:textAllCaps="false"
                android:layout_width="100dp"
                android:textColor="#F0F0F0"
                android:layout_height="32dp"
                android:letterSpacing="0.08"
                android:background="@drawable/selector_btn_blue_style"
                android:text="Submit" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/btn_submit"
                android:background="#335533" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_topics_list"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_below="@id/line1" />

        </RelativeLayout>
    </ScrollView>
</layout>