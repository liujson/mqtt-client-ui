<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="setting_text_style_1">
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#636363</item>
        <item name="android:gravity">right</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="setting_et_edit_style_1">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">22sp</item>
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
        <item name="android:background">@drawable/setting_selector_config_input_bg</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="setting_linear_item_style">
        <item name="android:layout_width">660dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>


    <style name="checkbox_default_style" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">#00a0e9</item>
        <item name="android:colorControlNormal">#d2d2d2</item>
    </style>

    <style name="line_view_horizontal_color_bbb">
        <item name="android:background">#BBBBBB</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
    </style>

    <style name="status_iv_state">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="status_rl_right_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="status_tv_title">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>